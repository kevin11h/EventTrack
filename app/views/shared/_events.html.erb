<% if object.any? %>
  <div class="row">
    <% object.each do |event| %>
      <div class="col-md-3 col-sm-6 event-card">
          <div class="">
          <div class="event-card-image">
            <%= image_tag 'event-placeholder.png', alt: 'Event placeholder', class: 'img-responsive' %>          
          </div>
          <div class="event-card-title">
            <%= link_to event.name, event %>
          </div>
          <% if can_edit? event %>
            <div class="event-card-bottom">
              <span class="pull-left event-card-bottom-invites"><%= pluralize(event.invites.count, "Person") %> Invited</span>
              <span class="pull-right"><%= link_to "Edit", edit_event_path(event), class: "btn btn-primary event-card-bottom-btn" %></span>          
            </div>                      
          <% end %>
        </div>        
      </div>
    <% end %>
  </div>
<% end %>
