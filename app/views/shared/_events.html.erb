<% if object.any? %>
  <div class="row">
    <% object.each do |event| %>
      <div class="col-md-3 col-sm-6">
        <div class="page-header">
          <h3><%= link_to event.name, event %></h3>
        </div>
        <p style="height: 160px"><%= event.description[0..336] + "..." %></p>
        <% if can_edit? event %>
          <p>
            <span class="pull-left"><%= pluralize(event.invites.count, "Person") %> Invited</span>
            <span class="pull-right"><%= link_to "Edit", edit_event_path(event), class: "btn btn-primary" %></span>
          </p>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
