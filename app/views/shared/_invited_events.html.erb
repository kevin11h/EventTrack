<% if object.any? %>
  <div class="row">
    <% object.each do |invite| %>
      <div class="col-md-3 event-card">
        <div class="">
          <div class="event-card-image">
            <%= image_tag 'event-placeholder.png', alt: 'Event placeholder', class: 'img-responsive' %>            
          </div>
          <div class="event-card-title">
            <h3><%= link_to invite.attended_event.name, event_path(invite.attended_event) %></h3>
          </div>        
          <div class="event-card-bottom">
            <span class="pull-left event-card-bottom-invites" id="invite-<%=invite.id%>">Invite: <%= invite.status %></span>
            <% if invite.status == 'Pending' %>
              <span class="pull-right event-card-bottom-btn">
                <%= link_to 'Accept invite', confirmation_path(invite), class: 'btn btn-success', 
                            remote: true, method: :post, id: 'bt-invite-'+invite.id.to_s %>
              </span>
            <% end %>
          </div>
        </div>
      </div>        
    <% end %>
  </div>
<% end %>
