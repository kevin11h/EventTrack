<% if object.any? %>
  <div class="row">
    <% object.each do |invite| %>
      <div class="col-md-3 event-card">
        <div class="">
          <div class="event-card-image">
            <img src="http://www.thebakerymadewithlove.com/wp-content/uploads/2014/08/placeholder.png" alt="placeholder" class="img-responsive">
          </div>
          <div class="event-card-title">
            <h3><%= link_to invite.attended_event.name, event_path(invite.attended_event) %></h3>
          </div>        
          <div class="event-card-bottom">
            <span class="pull-left"><%= invite.status %> Invited</span>
          </div>
        </div>
      </div>        
    <% end %>
  </div>
<% end %>
