<% flash.each do |key,msg| %>
  <% if key = 'notice' %>
    <% alert= "info" %>
  <% else %>
    <% alert = key %>
  <% end %>

  <div class="alert alert-dismissible alert-<%=alert%>" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <%= msg %>
  </div>
<% end %>
